<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButtonEditorResultCollagetom"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/select_button_photo_collage_tom" />

        <TextView
            android:textSize="13.0sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/title_editor_collage_button"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButtonEditorResultSharetom"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/select_button_share_tom" />

        <TextView
            android:textSize="13.0sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/title_editor_share_button"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>